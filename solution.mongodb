*************************************************/
db.employees.insertMany([
  {
    name: "Rahul",
    department: "IT",
    salary: 60000,
    age: 32
  },
  {
    name: "Anita",
    department: "HR",
    salary: 28000,
    age: 24
  },
  {
    name: "Vikram",
    department: "Sales",
    salary: 45000,
    age: 29
  },
  {
    name: "Priya",
    department: "IT",
